{
	"C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
	"c-cpp-flylint.includePaths": [
		"./external/glfw-3.3/include/GLFW",
		"./external/backtrace",
		"./external/boost/boost_1_74_0/boost",
		"./external/fast_obj/",
		"./external/glew-1.13.0/include",
		"./external/glm-0.9.7.1",
		"./external/lua-5.3.6/src",
		"./external/spdlog-1.5.0/include"
	],
	// https://github.com/mitaki28/vscode-clang/issues/53
	"c-cpp-flylint.clang.extraArgs": ["-Wno-pragma-once-outside-header"],
    "c-cpp-flylint.flexelint.enable": false,
	"clangd.arguments": [
		"-missing-includes=strict"
	],
	"cSpell.ignorePaths": ["./external"]
}
